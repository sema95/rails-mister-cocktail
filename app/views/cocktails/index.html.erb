<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <%= cl_image_tag cocktail.photo.key, class: "card-img-top", height: 400, width:300, crop: :fill %>
        <div class="card-body">
          <h5 class="card-title"> <%= cocktail.name %></h5>
          <p class="card-text">Test</p>
          <%= link_to 'Show Details', cocktail_path(cocktail), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
